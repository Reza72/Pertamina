<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prosia.listviewvolley.SignUp"
    android:weightSum="1">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/judulSignUp"
        android:layout_weight="0.80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/judulSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/createId"
        android:hint="Nomor Id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/createUsername"
        android:layout_below="@+id/createId"
        android:layout_alignLeft="@+id/createId"
        android:layout_alignStart="@+id/createId"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createPassword"
        android:layout_below="@+id/createUsername"
        android:layout_alignLeft="@+id/createUsername"
        android:layout_alignStart="@+id/createUsername"
        android:layout_marginTop="24dp"
        android:hint="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/createPassword"
        android:layout_alignRight="@+id/createPassword"
        android:layout_alignEnd="@+id/createPassword"
        android:layout_marginTop="27dp"
        android:id="@+id/createEmail"
        android:hint="example@email.com" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/createEmail"
        android:layout_alignLeft="@+id/createEmail"
        android:layout_alignStart="@+id/createEmail"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:id="@+id/createPhone"
        android:hint="Phone" />

    <Button
        android:text="Simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createPhone"
        android:layout_alignLeft="@+id/createEmail"
        android:layout_alignStart="@+id/createEmail"
        android:layout_marginTop="24dp"
        android:id="@+id/createSimpan" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/createSimpan"
        android:layout_toRightOf="@+id/createSimpan"
        android:layout_toEndOf="@+id/createSimpan"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/createCancel" />

</RelativeLayout>
